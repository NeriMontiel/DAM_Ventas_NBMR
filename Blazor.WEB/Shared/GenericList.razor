@typeparam TItem

@if (MyList == null)
{
	@if (Loading == null)
	{
		<div class="aling-items-center">
			<img src="https://media.tenor.com/khzZ7-YSJW4AAAA1/cargando.webp" />
		</div>
	}
	else

	{
		@Loading
	}

}
else
{
	if (MyList.Count == 0)
	{
		if (NoRecords == null)
		{
			<div class="alert-warning">
				<p>No hay registros para mostrar</p>
				</div>
		}
		else
		{
			@NoRecords
		}
	}
	else
	{
		@Body
	}
}

@code {

	[Parameter]
	public RenderFragment? Loading{ get; set; }

	[Parameter]
	public RenderFragment? NoRecords { get; set; }

	//Parametros obligatorios

	[Parameter]
	[EditorRequired]
	public RenderFragment? Body { get; set; } = null; 

	[Parameter]
	[EditorRequired]
	public List<TItem> MyList { get; set; } = null!;

}
